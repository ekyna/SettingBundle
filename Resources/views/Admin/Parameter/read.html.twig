{% extends '@EkynaAdmin/Entity/sided.html.twig' %}

{% block page_title %}{{ 'parameter.label.plural'|trans({}, 'EkynaSetting')|raw }}{% endblock page_title %}

{% block title %}
<h1>{{ 'parameter.header.show'|trans({}, 'EkynaSetting')|raw }}</h1>
{% endblock title %}

{% block actions %}{% endblock actions %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(
        context.config.id,
        'Ekyna\\Bundle\\SettingBundle\\Action\\ParametersUpdateAction',
        {'theme' : 'warning', 'icon': 'pencil'}
    ) }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs" data-tab-key="{{ context.config.id }}">
        {% for namespace, label in labels -%}
        <li{% if loop.index0 == 0 %} class="active"{% endif %}>
            <a href="#setting-{{ namespace }}" id="toggle-{{ namespace }}" data-toggle="tab">
                {{- label|trans -}}
            </a>
        </li>
        {%- endfor %}
    </ul>
    <div class="show-body">
        <div class="tab-content">
            {% for namespace, template in templates -%}
            <div class="tab-pane{% if loop.index0 == 0 %} active{% endif %}" id="setting-{{ namespace }}">
                {% include template %}
            </div>
            {%- endfor %}
        </div>
    </div>
</div>
{% endblock %}
