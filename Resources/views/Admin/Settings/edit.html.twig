{% extends '@EkynaAdmin/Entity/sided.html.twig' %}

{% block page_title %}{{ 'ekyna_setting.parameter.label.plural'|trans|raw }} - {{ parent() }}{% endblock page_title %}

{% block title %}
    <h1>{{ 'ekyna_setting.parameter.header.edit'|trans|raw }}</h1>
{% endblock %}

{% block actions %}{% endblock %}

{% block main %}
    <ul class="nav nav-tabs" data-tab-key="{{ resource_id }}">
        {% for namespace, label in labels %}
            <li{% if loop.index0 == 0 %} class="active"{% endif %}>
                <a href="#{{ namespace }}" id="toggle-{{ namespace }}" data-toggle="tab">
                    {{- label[0]|trans({}, label[1]) -}}
                </a>
            </li>
        {% endfor %}
    </ul>
    {{ form_start(form) }}
    <div class="panel-body form-body">
        {{ bootstrap_set_style('horizontal') }}
        {{ bootstrap_set_col_size('md') }}
        {{ bootstrap_set_label_col(3) }}
        {{ bootstrap_set_widget_col(9) }}
        {{ form_errors(form, {'global_errors': true}) }}
        <div class="tab-content">
            {% for namespace, template in templates %}
                <div class="tab-pane{% if loop.index0 == 0 %} active{% endif %}" id="{{ namespace }}">
                    {% include template %}
                </div>
            {% endfor %}
        </div>
        {{ form_rest(form) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
