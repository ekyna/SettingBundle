{% apply spaceless %}
<ul class="nav nav-tabs" data-tab-key="{{ context.config.id }}">
    <li class="active">
        <a href="#helper-general" id="toggle-general" data-toggle="tab">
            {{ 'field.general'|trans({}, 'EkynaUi') }}
        </a>
    </li>
</ul>
<div class="panel-body form-body">
    {{ bootstrap_set_style('horizontal') }}
    {{ bootstrap_set_col_size('md') }}
    {{ form_errors(form) }}
    <div class="tab-content">
        <div class="tab-pane active" id="helper-general">
            {{ form_row(form.name) }}
            <div class="row">
                <div class="col-md-6">{{ form_row(form.reference, {'label_col': 4, 'widget_col': 8}) }}</div>
                <div class="col-md-6">{{ form_row(form.enabled, {'label_col': 4, 'widget_col': 8}) }}</div>
            </div>
            {{ form_row(form.content) }}
        </div>
        {{ form_rest(form) }}
    </div>
</div>
{% endapply %}
