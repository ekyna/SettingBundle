{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_setting.parameter.header.show'|trans|raw }}</h1>
{% endblock %}

{% block actions %}
{% endblock %}

{% block main %}
<div class="actions">
    {{ ui_link(path('ekyna_setting_parameter_admin_edit'), 'ekyna_core.button.edit', {'theme' : 'warning', 'icon': 'pencil'}) }}
</div>
<div class="show show-with-tabs">
	<ul class="nav nav-tabs">
	    {% for namespace, label in labels %}
	    <li{% if loop.index0 == 0 %} class="active"{% endif %}><a href="#{{ namespace }}" data-toggle="tab">{{ label|trans }}</a></li>
	    {% endfor %}
	</ul>
	<div class="show-body">
	    <div class="tab-content">
	        {% for namespace, template in templates %}
		    <div class="tab-pane{% if loop.index0 == 0 %} active{% endif %}" id="{{ namespace }}">
		        {% include template %}
		    </div>
		    {% endfor %}
	    </div>
	</div>
</div>
{% endblock %}