{% extends "EkynaAdminBundle:Entity/Default:show.html.twig" %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(redirection, 'edit') }}
    {{ admin_resource_btn(redirection, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#prod-redirection-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="prod-redirection-general">
                {{ show_row(redirection.fromPath, 'text', 'ekyna_setting.redirection.field.from_path') }}
                {{ show_row(redirection.toPath, 'text', 'ekyna_setting.redirection.field.to_path') }}
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(redirection.permanent, 'checkbox', 'ekyna_setting.redirection.field.permanent', {'label_nb_col': 4}) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(redirection.enabled, 'checkbox', 'ekyna_core.field.enabled', {'label_nb_col': 4}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
