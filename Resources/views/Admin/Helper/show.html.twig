{% extends "EkynaAdminBundle:Entity/Default:show.html.twig" %}

{% block main %}
    <div class="actions">
        {{ admin_resource_btn(helper, 'edit') }}
        {{ admin_resource_btn(helper, 'remove') }}
    </div>
    <div class="show show-with-tabs">
        <ul class="nav nav-tabs" data-tab-key="{{ resource_id }}">
            <li class="active">
                <a href="#helper-general" id="toggle-general" data-toggle="tab">
                    {{ 'ekyna_core.field.general'|trans }}
                </a>
            </li>
        </ul>
        <div class="show-body">
            <div class="tab-content">
                <div class="tab-pane active" id="helper-general">
                    {{ show_row(helper.name, 'text', 'ekyna_core.field.name') }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ show_row(helper.reference, 'text', 'ekyna_core.field.reference', {'label_nb_col': 4}) }}
                        </div>
                        <div class="col-md-6">
                            {{ show_row(helper.enabled, 'text', 'ekyna_core.field.enabled', {'label_nb_col': 4}) }}
                        </div>
                    </div>
                    {{ show_row(path('ekyna_setting_helper_admin_tinymce', identifiers|merge({'helperId': helper.id})), 'tinymce', 'ekyna_core.field.content') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
