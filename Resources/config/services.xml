<?xml version="1.0" encoding="UTF-8" ?>
<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services
                        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ekyna_setting.parameter.class">Ekyna\Bundle\SettingBundle\Entity\Parameter</parameter>
        <parameter key="ekyna_setting.parameter.repository.class">Ekyna\Bundle\SettingBundle\Repository\ParameterRepository</parameter>
        <parameter key="ekyna_setting.parameter.controller.class">Ekyna\Bundle\SettingBundle\Controller\Admin\ParameterController</parameter>
    </parameters>

    <services>

        <!-- Parameter resource services -->
        <service id="ekyna_setting.parameter.manager" alias="doctrine.orm.entity_manager"/>
        <service id="ekyna_setting.parameter.repository"
                 class="%ekyna_setting.parameter.repository.class%">
            <factory service="doctrine.orm.entity_manager" method="getRepository"/>
            <argument>%ekyna_setting.parameter.class%</argument>
        </service>
        <service id="ekyna_setting.parameter.controller" class="%ekyna_setting.parameter.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        <service id="ekyna_setting.parameter.configuration"
                 class="%ekyna_resource.configuration.class%">
            <factory service="ekyna_resource.configuration_factory" method="createConfiguration"/>
            <argument type="collection">
                <argument key="namespace">ekyna_setting</argument>
                <argument key="id">parameter</argument>
                <argument key="classes" type="collection">
                    <argument key="entity">%ekyna_setting.parameter.class%</argument>
                    <argument key="form_type"><!-- TODO --></argument>
                </argument>
                <argument key="templates" type="collection"/>
            </argument>
            <tag name="ekyna_resource.configuration" alias="ekyna_setting_parameter"/>
        </service>

        <!-- Settings -->
        <service id="ekyna_setting.cache" parent="cache.app" public="false">
            <tag name="cache.pool" clearer="cache.default_clearer"/>
        </service>
        <service id="ekyna_setting.manager"
                 class="Ekyna\Bundle\SettingBundle\Manager\SettingsManager">
            <argument type="service" id="ekyna_setting.schema_registry"/>
            <argument type="service" id="ekyna_setting.parameter.manager"/>
            <argument type="service" id="ekyna_setting.parameter.repository"/>
            <argument type="service" id="ekyna_resource.locale_provider"/>
            <argument type="service" id="validator"/>
            <argument type="service" id="ekyna_setting.cache"/>
            <argument type="service" id="ekyna_core.cache.tag_manager"/>
        </service>

        <!-- Settings schema registry -->
        <service id="ekyna_setting.schema_registry"
                 class="Ekyna\Bundle\SettingBundle\Schema\SchemaRegistry"/>

        <!-- Form types -->
        <service id="Ekyna\Bundle\SettingBundle\Form\Type\I18nParameterType">
            <argument type="service" id="ekyna_resource.locale_provider"/>
            <tag name="form.type"/>
        </service>

        <!-- Show types -->
        <service id="ekyna_setting.show_type.i18n_parameter"
                 class="Ekyna\Bundle\SettingBundle\Show\Type\I18nParameterType">
            <argument>%locales%</argument>
            <tag name="ekyna_admin.show.type" alias="i18n_parameter"/>
        </service>

        <!-- Redirection provider -->
        <service id="ekyna_setting.redirection_provider"
                 class="Ekyna\Bundle\SettingBundle\Redirection\RedirectionProvider">
            <argument type="service" id="ekyna_setting.redirection.repository"/>
            <argument type="service" id="ekyna_setting.redirection.manager"/>
            <tag name="ekyna_core.redirection_provider"/>
        </service>

        <!-- Redirection builder -->
        <service id="ekyna_setting.redirection_builder"
                 class="Ekyna\Bundle\SettingBundle\Redirection\RedirectionBuilder">
            <argument id="ekyna_setting.redirection.manager" type="service"/>
            <argument>%ekyna_setting.redirection.class%</argument>
        </service>

        <!-- Event listeners -->
        <service id="ekyna_setting.redirection.event_subscriber"
                 class="Ekyna\Bundle\SettingBundle\EventListener\RedirectionEventSubscriber">
            <argument id="ekyna_setting.redirection_builder" type="service"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- Constraints validators -->
        <service id="ekyna_setting.validator.redirection_validator"
                 class="Ekyna\Bundle\SettingBundle\Validator\Constraints\RedirectionValidator">
            <argument type="service" id="request_stack"/>
            <argument type="service" id="security.http_utils"/>
            <tag name="validator.constraint_validator"/>
        </service>

        <!-- Twig extensions -->
        <service id="ekyna_setting.twig_extension"
                 class="Ekyna\Bundle\SettingBundle\Twig\SettingsExtension">
            <argument type="service" id="ekyna_setting.manager"/>
            <tag name="twig.extension"/>
        </service>

    </services>

</container>
